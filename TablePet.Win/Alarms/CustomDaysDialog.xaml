<Window x:Class="TablePet.Win.Alarms.CustomDaysDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TablePet.Win.Alarms"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="CustomDaysDialog" Height="100" Width="450">
    <StackPanel Margin="10">
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <CheckBox Content="周一" x:Name="MondayCheckbox" Margin="5,0"/>
            <CheckBox Content="周二" x:Name="TuesdayCheckbox" Margin="5,0"/>
            <CheckBox Content="周三" x:Name="WednesdayCheckbox" Margin="5,0"/>
            <CheckBox Content="周四" x:Name="ThursdayCheckbox" Margin="5,0"/>
            <CheckBox Content="周五" x:Name="FridayCheckbox" Margin="5,0"/>
            <CheckBox Content="周六" x:Name="SaturdayCheckbox" Margin="5,0"/>
            <CheckBox Content="周日" x:Name="SundayCheckbox" Margin="5,0"/>
        </WrapPanel>
        <Button Content="确认" Click="ConfirmButton_Click" Margin="5" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
