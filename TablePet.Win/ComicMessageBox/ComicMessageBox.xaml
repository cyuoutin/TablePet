<UserControl x:Class="TablePet.Win.Messagebox.ComicMessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300" Height="120" Background="Transparent"
             x:Name="ComicMessageBoxControl"
             Visibility="Collapsed"> 
    <Grid>
        <Border Background="Transparent" CornerRadius="25" Padding="5">
            <Grid Background="Transparent">
                <Border Background="White" CornerRadius="20" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock x:Name="MessageText"
                                   Margin="20"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Foreground="Black"
                                   FontSize="16"/>
                    </StackPanel>
                </Border>
                
                <Path Data="M 160,100 L 140,130 L 220,100 Z"
                      Fill="White"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Bottom"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>